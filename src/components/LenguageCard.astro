---
export interface Props {
  title: string;
  description: string;
  imageUrl: string;
  imageAlt: string;
}

const { title, description, imageUrl, imageAlt } = Astro.props;
---

<div class="
    group relative border border-gray-300 bg-white p-4 rounded-lg shadow-sm
    hover:shadow-xl transition-all duration-500 transform hover:scale-[1.02]
    flex flex-col text-center
    w-full max-w-sm mx-auto
    min-h-fit overflow-hidden
  ">
  <!-- Icon -->
  <div class="flex items-center justify-center mb-3">
    <div class="w-16 h-16 overflow-hidden rounded-md flex items-center justify-center">
      <img src={imageUrl} alt={imageAlt} class="max-w-full max-h-full object-contain" />
    </div>
  </div>
  
  <!-- Title -->
  <h4 class="text-lg font-semibold mb-3 text-gray-800">{title}</h4>
  
  <!-- Description -->
  <p class="text-gray-600 text-sm leading-relaxed">
    {description}
  </p>

  <!-- Hover effect overlay -->
  <div class="absolute inset-0 bg-gradient-to-r from-blue-600/5 to-purple-600/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none rounded-lg"></div>
</div>
