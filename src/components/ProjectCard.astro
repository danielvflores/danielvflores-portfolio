---
const { title, description, techs = [], repoUrl } = Astro.props;
---

<div class="bg-white rounded-xl p-6 border border-gray-100 shadow-sm hover:shadow-lg transition-all duration-300 transform hover:scale-105">
  <h3 class="text-xl font-bold mb-2">{title}</h3>
  <p class="text-gray-600 mb-4">{description}</p>
  <ul class="flex flex-wrap gap-2 text-sm mb-4">
    {techs.map((tech: any) => (
      <li class="bg-gray-200 px-2 py-1 rounded">{tech}</li>
    ))}
  </ul>
  <a
    href={repoUrl}
    target="_blank"
    rel="noopener noreferrer"
    class="text-blue-600 hover:underline"
  >
    Ver en GitHub â†’
  </a>
</div>
